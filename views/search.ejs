<% layout('./layout') -%>

<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <h1><%- title %></h1>
        </div>
    </div>

</div>

<div class="container">

    <div class="row">
        <% if(data && data.products) { %>
        <% data.products.forEach(function(p){ %>
        <div class="col col-lg-3 col-md-4 col-sm-6">

            <div class="card product" style="width: 18rem;">
                <a href="/product/<%- p.productId %>">
                    <img class="card-img-top" src="<%- p.productImage %>" alt="<%- p.productTitle %>">
                </a>
                <div class="card-body">
                    <h4 class="card-title ellipsis"><%- p.productTitle %></h4>
                    <h6>
                        <%- p.minPrice %>  <%- p.currency %>
                        <% if (p.discount) { %>
                        <span class="badge badge-danger">-<%- p.discount %>%</span>
                        <% } %>
                    </h6>
                    <% if (p.feedback && p.feedback.rating) { %>
                    <span>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <%- p.feedback.rating %>
                        <i class="fa fa-comments" aria-hidden="true"></i>
                        <%- p.feedback.voteCount %>
                    </span>
                    <% } %>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="/product/<%- p.productId %>" class="btn btn-primary">go details</a>
                </div>
            </div>

        </div>
        <% }) %>
        <% } %>
    </div>

    <br/>

    <div class="row">
        <nav class="col-12">
            <div class="col-4">
                <ul class="pagination">
                    <% if(data && data.prev) { %>
                    <li class="page-item">
                        <a class="page-link" href="/flash-deals/<%- data.page - 1 %>">Previous</a>
                    </li>
                    <% } %>
                    <% if(data && data.next) { %>
                    <li class="page-item">
                        <a class="page-link" href="/flash-deals/<%- data.page + 1 %>">Next</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </nav>
    </div>

</div>